# Environment variables for Hệ thống Quản lý Bảo hiểm
# Copy this file to .env and update with your environment-specific values

# Application environment (development or production)
APP_ENV=development

# Database settings
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=your_password
DB_NAME=insurance_management

# JWT settings
JWT_SECRET_KEY=your_secure_jwt_secret_key
JWT_EXPIRE_MINUTES=30

# Session timeout in minutes
SESSION_TIMEOUT_MINUTES=30

# AES Encryption key (must be exactly 32 bytes/characters for AES-256)
ENCRYPTION_KEY=your_32_character_encryption_key_!!

# Email settings for account verification
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_USER=your_email@example.com
EMAIL_PASSWORD=your_email_password
EMAIL_FROM=noreply@example.com
